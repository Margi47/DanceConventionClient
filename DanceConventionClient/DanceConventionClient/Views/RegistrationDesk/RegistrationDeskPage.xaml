<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.RegistrationDeskPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="CameraButton"
					Text="Camera"
					Clicked="CameraButton_OnClicked"/>
	</ContentPage.ToolbarItems>
	
	<StackLayout x:Name="MainRegistrationStack">
	  <SearchBar x:Name="SearchBar"
				 SearchButtonPressed="OnSearchButtonPressed"/>

		<StackLayout x:Name="ContentStack">
			<Label x:Name="InfoLabel"
				   Text="Enter participant name or scan QR code"/>
		</StackLayout>
	</StackLayout>
</ContentPage>