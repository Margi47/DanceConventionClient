<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.MyEventspage"
			 Title="My events">

	<StackLayout>
		<ListView x:Name="currentEvents"
				  HasUnevenRows="True"
				  Header=""
				  ItemTapped="events_ItemTapped">

			<ListView.HeaderTemplate>
				<DataTemplate>
					<Label Text="Current Events"/>
				</DataTemplate>
			</ListView.HeaderTemplate>

			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout>
							<Label Text="{Binding Name}"/>
							<Label Text="{Binding StartDate}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<ListView x:Name="pastEvents"
				  HasUnevenRows="True"
				  Header=""
				  ItemTapped="events_ItemTapped">

			<ListView.HeaderTemplate>
				<DataTemplate>
					<Label Text="Past Events"/>
				</DataTemplate>
			</ListView.HeaderTemplate>

			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout>
							<Label Text="{Binding Name}"/>
							<Label Text="{Binding StartDate}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>