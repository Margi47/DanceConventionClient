<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.CurrentEventPage"
			 Title="Event">

	<StackLayout>
		<Label x:Name="EventName"/>
		<Button x:Name="MyReg"
				Text="My registration"
				Clicked="MyRegistrationButtonOnClicked"
				IsVisible="False"/>
		<Button x:Name="ContestCheckin"
				Text="Contest check-in"
				Clicked="CheckinButton_Clicked"
				IsVisible="False"/>
		<Button x:Name="RegDesk"
				Text="Registration desk"
				Clicked="RegistrationDesk_Clicked"
				IsVisible="False"/>
	</StackLayout>
</ContentPage>