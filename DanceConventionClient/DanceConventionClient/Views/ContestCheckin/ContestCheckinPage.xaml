<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.ContestCheckinPage">

	<StackLayout>
		<Button x:Name="CameraButton"
				Text="Scan QR Code" Style="{StaticResource ButtonStyle}"
				Clicked="Camera_OnClicked"/>

		<ListView x:Name="ContestsList" 
				  Style="{StaticResource ListViewStyle}"
				  ItemTapped="ContestsList_OnItemTapped"
				  IsVisible="False"
				  VerticalOptions="StartAndExpand">

			<ListView.HeaderTemplate>
				<DataTemplate>
					<Frame Style="{StaticResource HeaderFrame}"
						   Padding="20,0,0,0">
						<Label Text="Contests"
							   Style="{StaticResource Headerlabel}"/>
					</Frame>
				</DataTemplate>
			</ListView.HeaderTemplate>

			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Text="{Binding Name}"
							   Style="{StaticResource Itemlabel}"
							   HeightRequest="40"/>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		
		<Label x:Name="NoResultLabel"
			   Text="No contests available for check-in"
			   HorizontalOptions="Center"
			   VerticalOptions="CenterAndExpand"
			   TextColor="Gray"
			   FontSize="20"
			   IsVisible="True"/>
	</StackLayout>
	
</ContentPage>