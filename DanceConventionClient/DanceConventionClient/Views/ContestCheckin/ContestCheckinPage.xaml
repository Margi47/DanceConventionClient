<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.ContestCheckinPage">
	<!--enable toolbaritem-->
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="CameraButton"
					Text="Camera"
					Clicked="Camera_OnClicked"/>
	</ContentPage.ToolbarItems>
	
	<StackLayout>
		<ListView x:Name="ContestsList" 
				  HasUnevenRows="True"
				  Header=""
				  ItemTapped="ContestsList_OnItemTapped"
				  IsVisible="False">
			<ListView.HeaderTemplate>
				<DataTemplate>
					<Label Text="Contests"/>
				</DataTemplate>
			</ListView.HeaderTemplate>
			
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Text="{Binding Name}"/>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		
	  <Label Text="Click camera button for QR code check-in or select contest"/>
	  <Label x:Name="NoResultLabel"
			 Text="No contests available for check-in"
			 IsVisible="True"/>
	  <Label x:Name="ResultLabel"
	   	     IsVisible="True"/>
	</StackLayout>
	
</ContentPage>