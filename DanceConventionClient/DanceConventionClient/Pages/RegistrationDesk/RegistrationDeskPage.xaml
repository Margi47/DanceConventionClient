<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.RegistrationDeskPage">

	<StackLayout x:Name="MainRegistrationStack">
		<Button Text="Scan QR Code"
				Style="{StaticResource ButtonStyle}"
				Clicked="CameraButton_OnClicked"/>
		
		<SearchBar x:Name="SearchBar"
				 SearchButtonPressed="OnSearchButtonPressed"/>

		<StackLayout x:Name="ContentStack" VerticalOptions="FillAndExpand">
			<Label x:Name="InfoLabel"
				   Style="{StaticResource InfoLabel}">
				<Label.Text>
					Enter participant name or 
					scan QR code
				</Label.Text>
			</Label>
		</StackLayout>
	</StackLayout>
</ContentPage>