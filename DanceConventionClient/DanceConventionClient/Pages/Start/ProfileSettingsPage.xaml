<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanceConventionClient.Pages.ProfileSettingsPage"
			 Title="Settings">

	<StackLayout>
		<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
			<Label Text="Enable verbose logging"
				   Style="{StaticResource Itemlabel}"
				   Margin="20,20,0,13"
				   FontAttributes="Bold"/>
			<Switch IsToggled="{Binding SwitchToggled}"
					HorizontalOptions="EndAndExpand"
					VerticalOptions="Center"
					Margin="0,20,20,13"/>
		</StackLayout>
		
		<Button Text="Report Error" 
				Command="{Binding SendLogCommand}"
				Style="{StaticResource ButtonStyle}"/>

		<Label Text="{Binding Text}"
			   Style="{StaticResource InfoLabel}"/>
	</StackLayout>
</ContentPage>